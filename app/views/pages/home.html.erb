<main class="container">
  <% if @currencies.blank? %>
    <div class="header">
      <p>No Exchange rates available for <%= Date.current%></p>
    <div>
  <% else %>
    <div class="header"><h3>Valid for <%= Date.current%></h3></div>
    <div class="currency">
      <table>
        <thead>
          <tr>
            <th>Country</th>
            <th>Currency</th>
            <th>Amount</th>
            <th>Code</th>
            <th>Rate</th>
          </tr>
        </thead>
        <tbody>
          <% @currencies.each do |currency| %>
            <tr>
              <td><%= currency.country %></td>
              <td><%= currency.currency_name %></td>
              <td><%= currency.amount %></td>
              <td><%= currency.currency_code %></td>
              <td><%= currency.rate %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</main>
